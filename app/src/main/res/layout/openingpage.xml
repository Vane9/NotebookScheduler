<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Welcome to the Organizing App!"
            android:textColor="#000000"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/goto_calendar_btn"
            android:layout_width="156dp"
            android:layout_height="64dp"
            android:onClick="gotoCalendarActivity"
            android:text="Go to Calendar"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/goto_note_btn"
            android:layout_width="137dp"
            android:layout_height="63dp"
            android:onClick="gotoAddNotebook"
            android:text="Go to Notebook"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_height="58dp"
            android:layout_width="wrap_content"
            android:text="An app that allows you to set your daily events and notes altogether neatly!"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="17sp"/>

        <View
            android:id="@+id/divider"
            android:layout_width="339dp"
            android:layout_height="8dp"
            android:background="@color/black"
            android:backgroundTint="#000000"/>

        <View
            android:id="@+id/divider2"
            android:layout_width="369dp"
            android:layout_height="6dp"
            android:background="@color/black"
            android:backgroundTint="#000000"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Started"
            android:textColor="#000000"
            android:textSize="30sp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>